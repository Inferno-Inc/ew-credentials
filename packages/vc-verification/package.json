{
  "name": "@energyweb/vc-verification",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "description": "This package provides code to verify verifiable credential, including governance verification",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run compile:ts && npm run build:typechain && copyfiles build/contracts/**/*.json -u 1 dist && copyfiles \"ethers/**/*.d.ts\" dist && copyfiles \"contracts/**/*\" -u 1 dist/contracts",
    "build:typechain": "typechain --target ethers-v5 --out-dir ethers './build/contracts/EthereumDIDRegistry.json'",
    "compile": "npm run compile:contracts && npm run build",
    "compile:contracts": "truffle compile",
    "compile:ts": "bili"
  },
  "keywords": [
    "Energy",
    "EnergyWeb",
    "EW",
    "DID",
    "Roles",
    "Credential"
  ],
  "author": {
    "name": "EnergyWeb",
    "url": "https://www.energyweb.org/"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@energyweb/onchain-claims": "1.0.0",
    "@energyweb/credential-governance": "1.0.0",
    "@ew-did-registry/did-ethr-resolver": "^0.6.3-alpha.426.0",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^5.5.4",
    "ipfs": "^0.58.3",
    "ipfsd-ctl": "3.0.0",
    "js-sha3": "^0.8.0"
  },
  "devDependencies": {
    "jsonwebtoken": "^8.5.1"
  }
}
